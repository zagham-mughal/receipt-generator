{
  "name": "receipt-generator",
  "version": "1.0.0",
  "description": "Web-based receipt generator with manual input",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "npm run build:frontend && ts-node src/server.ts",
    "build": "npm run build:frontend && tsc",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/tailwind.css --minify",
    "build:frontend": "tsc --project tsconfig.frontend.json && mv public/app.js public/app-compiled.js",
    "generate-csv": "ts-node src/index.ts",
    "watch:frontend": "tsc --project tsconfig.frontend.json --watch",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./public/tailwind.css --watch",
    "postinstall": "npm run build"
  },
  "keywords": [
    "receipt",
    "pdf",
    "generator",
    "web",
    "app"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.4.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.6",
    "express": "^4.18.2",
    "pdfkit": "^0.15.0",
    "svg-to-pdfkit": "^0.1.8"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/pdfkit": "^0.13.4",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
